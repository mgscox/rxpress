{
  "name": "@newintel/multi-language-sentiment",
  "version": "0.1.0",
  "description": "Multi-language sentiment analyser example using rxpress with a Python gRPC backend",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "node --import ./scripts/register-ts-node.mjs --enable-source-maps src/main.ts",
    "build": "tsc -p .",
    "start": "node dist/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "node --import ./scripts/register-ts-node.mjs --test \"src/__tests__/**/*.test.ts\"",
    "proto:gen": "npm run proto:gen:ts && npm run proto:gen:py",
    "proto:gen:ts": "node -e \"console.log('TypeScript uses proto-loader at runtime; no generation needed.')\"",
    "proto:gen:py": "python -m grpc_tools.protoc --proto_path=./proto --python_out=python --grpc_python_out=python sentiment.proto",
    "py:install": "python -m pip install -r python/requirements.txt",
    "py:lint": "ruff python",
    "py:test": "pytest python/tests"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.5",
    "@grpc/proto-loader": "^0.7.10",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "rxpress": "file:../../rxpress",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/node": "^22.8.6",
    "eslint": "^9.37.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
