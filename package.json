{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/*/*"
  ],
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.206.0",
    "@opentelemetry/host-metrics": "^0.36.2",
    "@opentelemetry/instrumentation-runtime-node": "^0.20.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "chalk": "^5.6.2",
    "express": "^5.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.2",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9"
  },
  "scripts": {
    "release": "semantic-release",
    "build": "lerna run build",
    "prepare": "husky",
    "lint": "eslint \"packages/**/src/**/*.{ts,js}\" \"packages/**/__tests__/**/*.{ts,js}\"",
    "lint:fix": "npm run lint --stream -- --fix"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --max-warnings=0"
    ],
    "*.{json,md}": [
      "prettier --check"
    ]
  }
}
